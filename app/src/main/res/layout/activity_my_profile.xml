<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/bg_profile"
    android:layout_height="match_parent"
    android:background="@drawable/grandient_list"
    tools:context=".MyProfile">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bgTitle"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/userImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:maxHeight="222dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/ic_take_photo"
                    android:background="@drawable/common_google_signin_btn_icon_light_normal_background"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:background="@color/bgTitle"
                        android:orientation="horizontal"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <TextView
                            android:id="@+id/pass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="1"
                            android:inputType="textLongMessage"
                            android:padding="4dp"
                            android:text="@string/youpassword"
                            android:textColor="#363636"
                            android:textStyle="normal" />

                        <EditText
                            android:id="@+id/editPass2"
                            android:layout_width="88dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:background="@color/calendarColor"
                            android:hint="johnLikesDoe"
                            android:padding="4dp"
                            android:textColorHint="@color/wordsTitle"
                            android:textSize="14sp"
                            android:inputType="textPassword"
                            android:textStyle="italic" />

                        <EditText
                            android:id="@+id/editPass"
                            android:layout_width="88dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:background="@color/calendarColor"
                            android:ems="10"
                            android:hint="johnLikesDoe"
                            android:inputType="textPassword"
                            android:padding="4dp"
                            android:textColorHint="@color/wordsTitle"
                            android:textSize="14sp"
                            android:textStyle="italic" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@color/bgTitle"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="@string/yourName"
                        android:textColor="#363636"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/editName"
                        android:layout_width="232dp"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:background="@color/calendarColor"
                        android:ems="10"
                        android:hint="example: John"
                        android:inputType="textPersonName"
                        android:padding="4dp"
                        android:textColorHint="@color/wordsTitle"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="346dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@color/bgTitle"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:id="@+id/surname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="@string/yourSurnames"
                        android:textColor="#363636"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/editSurname"
                        android:layout_width="209dp"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:background="@color/calendarColor"
                        android:ems="10"
                        android:hint="example: Doe"
                        android:inputType="textPersonName"
                        android:padding="4dp"
                        android:textColorHint="@color/wordsTitle"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@color/bgTitle"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="@string/yourEmail"
                        android:textColor="#363636"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/editEmail"
                        android:layout_width="222dp"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:background="@color/calendarColor"
                        android:ems="10"
                        android:hint="johnDoe@example.com"
                        android:inputType="textEmailAddress"
                        android:padding="4dp"
                        android:textColorHint="@color/wordsTitle"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@color/bgTitle"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="@string/yourAddress"
                        android:textColor="#363636"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/editAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:background="@color/calendarColor"
                        android:ems="10"
                        android:hint="example: Baker Street"
                        android:inputType="textPersonName"
                        android:padding="4dp"
                        android:textColorHint="@color/wordsTitle"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@color/bgTitle"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="@string/yourAge"
                        android:textColor="#363636"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/editAge"
                        android:layout_width="217dp"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:background="@color/calendarColor"
                        android:ems="10"
                        android:hint="example: 25"
                        android:inputType="number"
                        android:padding="4dp"
                        android:textColorHint="@color/wordsTitle"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:background="@color/bgTitle"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/getArea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="1"
                            android:padding="4dp"
                            android:text="@string/select_area"
                            android:textColor="#363636"
                            android:textStyle="normal" />

                        <EditText
                            android:id="@+id/radius"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:background="@color/calendarColor"
                            android:ems="10"
                            android:hint="example: 250"
                            android:inputType="numberDecimal"
                            android:padding="4dp"
                            android:textColorHint="@color/wordsTitle"
                            android:textSize="14sp"
                            android:textStyle="italic" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/getPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="1"
                            android:padding="4dp"
                            android:text="@string/yourPhone"
                            android:textColor="#363636"
                            android:textStyle="normal" />

                        <EditText
                            android:id="@+id/editPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:background="@color/calendarColor"
                            android:ems="10"
                            android:hint="example: 123 123 123"
                            android:inputType="phone"
                            android:padding="4dp"
                            android:textColorHint="@color/wordsTitle"
                            android:textSize="14sp"
                            android:textStyle="italic" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/send_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="sendData"
                    android:layout_weight="1"
                    android:backgroundTint="@color/buttonsMain"
                    android:text="@string/send_profile"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>