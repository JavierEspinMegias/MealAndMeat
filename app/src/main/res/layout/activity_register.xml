<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    tools:context=".Register">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/bgTitle"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@color/bgTitle"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="222dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:background="@color/buttonsMain"
                android:ems="10"
                android:hint="johnDoe@example.com"
                android:inputType="textEmailAddress"
                android:padding="4dp"
                android:textColorHint="@color/wordsTitle"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/bgTitle"
                android:padding="4dp"
                android:text="@string/yourEmail"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@color/bgTitle"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <EditText
                android:id="@+id/editAddress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:background="@color/buttonsMain"
                android:ems="10"
                android:hint="example: Baker Street"
                android:inputType="textMultiLine"
                android:padding="4dp"
                android:textColorHint="@color/wordsTitle"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/bgTitle"
                android:padding="4dp"
                android:text="@string/yourAddress"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@color/bgTitle"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <EditText
                android:id="@+id/editAge"
                android:layout_width="217dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:background="@color/buttonsMain"
                android:ems="10"
                android:hint="example: 25"
                android:inputType="number"
                android:padding="4dp"
                android:textColorHint="@color/wordsTitle"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/bgTitle"
                android:padding="4dp"
                android:text="@string/yourAge"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@color/bgTitle"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <EditText
                android:id="@+id/editSurname"
                android:layout_width="209dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:background="@color/buttonsMain"
                android:ems="10"
                android:hint="example: Doe"
                android:inputType="textPersonName"
                android:padding="4dp"
                android:textColorHint="@color/wordsTitle"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/bgTitle"
                android:padding="4dp"
                android:text="@string/yourSurnames"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@color/bgTitle"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <EditText
                android:id="@+id/editName"
                android:layout_width="232dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:background="@color/buttonsMain"
                android:ems="10"
                android:hint="example: John"
                android:inputType="textPersonName"
                android:padding="4dp"
                android:textColorHint="@color/wordsTitle"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/bgTitle"
                android:padding="4dp"
                android:text="@string/yourName"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@color/bgTitle"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <EditText
                android:id="@+id/editPass"
                android:layout_width="202dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:background="@color/buttonsMain"
                android:ems="10"
                android:hint="johnLikesDoe"
                android:inputType="textPassword"
                android:padding="4dp"
                android:textColorHint="@color/wordsTitle"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/bgTitle"
                android:padding="4dp"
                android:text="@string/youpassword"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@color/bgTitle"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <EditText
                android:id="@+id/editPass2"
                android:layout_width="203dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:background="@color/buttonsMain"
                android:ems="10"
                android:hint="johnLikesDoe"
                android:inputType="textPassword"
                android:padding="4dp"
                android:textColorHint="@color/wordsTitle"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/pass2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/bgTitle"
                android:padding="4dp"
                android:text="@string/youpasswordTwice"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:background="@color/bgTitle"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <EditText
                android:id="@+id/editPhone"
                android:layout_width="217dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:background="@color/buttonsMain"
                android:ems="10"
                android:hint="example: 123456789"
                android:inputType="phone"
                android:padding="4dp"
                android:textColorHint="@color/wordsTitle"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@color/bgTitle"
                android:padding="4dp"
                android:text="@string/yourPhone"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/sign"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Register"
        android:onClick="newUser"
        android:textStyle="bold"
        android:textColorHint="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />
</android.support.constraint.ConstraintLayout>