<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bgbw"
    tools:context=".ViewSingleDateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:backgroundTint="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:padding="16dp"
                android:textColor="@color/calendarColor"
                android:text="@string/dateDay"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/dateData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="0dp"
                android:gravity="center_vertical"
                android:inputType="date"
                android:paddingLeft="4dp"
                android:text="TextView"
                android:textColor="@color/calendarColor"
                android:textSize="22sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="0dp"
                android:inputType="text"
                android:text="@string/hour"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dateHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="0dp"
                android:gravity="center_vertical"
                android:inputType="time"
                android:paddingLeft="4dp"
                android:text="TextView"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pricesingle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="0dp"
                android:inputType="text"
                android:text="@string/price_title"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:inputType="text"
                android:id="@+id/priceData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="0dp"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="TextView"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/datesinglemenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="0dp"
                android:inputType="text"
                android:text="@string/menu_group_title"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/menuData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="0dp"
                android:gravity="center_vertical"
                android:inputType="textMultiLine"
                android:paddingLeft="4dp"
                android:text="TextView"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="0dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nextMeetTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="0dp"
                android:gravity="center_vertical"
                android:inputType="text"
                android:padding="0dp"
                android:text="@string/dateInfo"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dateInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="0dp"
                android:gravity="center_vertical"
                android:inputType="textMultiLine"
                android:paddingLeft="4dp"
                android:text="TextView"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/button_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:backgroundTint="@color/colorAccent"
                android:elevation="6dp"
                android:inputType="text"
                android:text="@string/title_activity_maps"
                android:textColor="@color/wordsTitle"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/editDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/calendarColor"
            android:text="@string/send_date"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:layout_gravity="right"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="303dp"
            tools:layout_editor_absoluteY="549dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>